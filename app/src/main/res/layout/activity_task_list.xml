    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context="com.example.project.activity.TaskListActivity"
        android:background="#180A40">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="#00BCD4"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="35dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="379dp"
            android:layout_height="566dp"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#FFA626"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toStartOf="@id/cardTask2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#FF5722"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Dictionary"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#FF0385"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTask1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#9C27B0"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Listening"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#2323F2"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toStartOf="@id/cardTask4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTask1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#03A9F4"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Speaking"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#9410F2"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTask3"
                app:layout_constraintTop_toBottomOf="@id/cardTask2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#FA3074"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Reading"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#F82550"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toStartOf="@id/cardTask6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTask3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#FF9800"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Writing"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask6"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#00BFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTask5"
                app:layout_constraintTop_toBottomOf="@id/cardTask4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:shadowColor="#3F51B5"
                    android:shadowDx="5"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Test"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#180A40"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>